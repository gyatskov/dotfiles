# General aliases

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

## Tmux
alias tmux2="tmux -2"

## Clipboard functionality using xclip
alias ci='xclip -in -selection clipboard'
alias co='xclip -out -selection clipboard'

## IDE-friendly grepping using ripgrep
alias rgn='rg --no-heading --line-number --column'

## git
alias gpr='git pull --rebase'
alias gsy='git submodule sync'
alias gsu='git submodule update --init --recursive'
alias grv='git review'
alias gfa='git fetch --all --prune'

