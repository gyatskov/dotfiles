{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rg word",
            "type": "shell",
            "command": "rg",
            "args": [
                "--no-heading",
                "--column",
                "-w",
                "'${selectedText}'"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
